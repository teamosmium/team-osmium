@using Microsoft.Extensions.Options

@inject IOptions<BookMarked.Utility.StripeSettings> Stripe

@{
    var OrderTotalForStripe = 10 * 100;

}
<link rel="stylesheet" href="~/css/subscription.css" type="text/css" />
<div class="background">
        <div class="panel pricing-table">

            <div class="pricing-plan">
                <img src="https://s22.postimg.cc/8mv5gn7w1/paper-plane.png" alt="" class="pricing-img">
                <h2 class="pricing-header">Silver</h2>
                <ul class="pricing-features">
                    <li class="pricing-features-item">Newbie</li>
                    <li class="pricing-features-item">Unlimited access to all the EBooks on the site for 15 days</li>
                </ul>
                <span class="pricing-price">15 Days</span>
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="@Stripe.Value.PublishableKey"
                        data-amount="@OrderTotalForStripe"
                        data-currency="eur"
                        data-name="BookMarked"
                        data-label="€10"
                        data-locate="auto"
                        data-allow-remember-me="false"
                        data-image="https://stripe.com/img/documentation/checkout/marketplace.png">
                </script>
            </div>

            <div class="pricing-plan">
                <img src="https://s28.postimg.cc/ju5bnc3x9/plane.png" alt="" class="pricing-img">
                <h2 class="pricing-header">Gold</h2>
                <ul class="pricing-features">
                    <li class="pricing-features-item">Never sleeps</li>
                    <li class="pricing-features-item">Unlimited access to all the EBooks on the site for 30 days</li>
                </ul>
                <span class="pricing-price">30 Days</span>
                @{
                    OrderTotalForStripe = 15 * 100;
                }
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="@Stripe.Value.PublishableKey"
                        data-amount="@OrderTotalForStripe"
                        data-currency="eur"
                        data-name="BookMarked"
                        data-label="€15"
                        data-locate="auto"
                        data-allow-remember-me="false"
                        data-image="https://stripe.com/img/documentation/checkout/marketplace.png">
                </script>
            </div>

            <div class="pricing-plan">
                <img src="https://s21.postimg.cc/tpm0cge4n/space-ship.png" alt="" class="pricing-img">
                <h2 class="pricing-header">Platinum</h2>
                <ul class="pricing-features">
                    <li class="pricing-features-item">Dedicated</li>
                    <li class="pricing-features-item">Unlimited access to all the EBooks on the site for 60 days</li>
                </ul>
                <span class="pricing-price">60 Days</span>
                @{
                    OrderTotalForStripe = 25 * 100;

                }
                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key="@Stripe.Value.PublishableKey"
                        data-amount="@OrderTotalForStripe"
                        data-currency="eur"
                        data-name="BookMarked"
                        data-label="€25"
                        data-locate="auto"
                        data-allow-remember-me="false"
                        data-image="https://stripe.com/img/documentation/checkout/marketplace.png">
                </script>
            </div>

        </div>
</div>